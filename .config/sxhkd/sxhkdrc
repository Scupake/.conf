ctrl + space
    urxvt 

ctrl + d
     rofi -lines 12 -padding 18 -width 60 -location 0 -show drun -sidebar-mode -columns 3 -font 'Noto Sans 8' 

ctrl + t
    bspc node -t tiled

ctrl + f
    bspc node -t floating

# VOLUME
 
### Mute
XF86AudioMute
    amixer set Master toggle
 
### Master Volume
XF86AudioRaiseVolume
    amixer set Master 2.5%+,5%+;
 
super + XF86AudioRaiseVolume
    amixer set Master 0.5%+,1%+;
 
XF86AudioLowerVolume
    amixer set Master 2.5%-,5%-;
 
super + XF86AudioLowerVolume
    amixer set Master 0.5%-,1%-;
 
# BRIGHTNESS
 
# Brightness goes up
XF86MonBrightnessUp
    xbacklight -inc 10;
# Brightness goes down
XF86MonBrightnessDown
    xbacklight -dec 10;

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

#TO NEXT AND BEYON lmao
ctrl + alt + Right
    bspc desktop -f next

ctrl + alt + Left
    bspc desktop -f prev

#send TO NEXT AND BEYON lmao
ctrl + alt + shift + Right
    bspc node -d next && bspc desktop -f next

ctrl + alt + shift + Left
    bspc node -d prev && bspc desktop -f prev

#CLOSE STUFF MY CAPS KEY IS STUCK
ctrl + shift + q
    bspc node -c

#MONOCLE??????
ctrl + m
    bspc desktop -l next

#KILL THE WM
ctrl + alt + Escape
    pkill bspwm

#resize stuff
super + alt + {Left,Down,Up,Right}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
 
super + alt + shift + {Right,Up,Down,Left}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

#rotateeee
ctrl + alt + Up
      bspc node @/ -R 90

ctrl + alt + Down
      bspc node @/  -R -90

#swap with the biggest one
ctrl + alt + shift + Up
      bspc node -s biggest.local

#alt + tab
alt + Tab 
	bspc node -f last

#next and prev
alt + Tab + Left
	bspc node -f prev

alt + Tab + Right
	bspc node -f next

#screeenshotyt
print
	flameshot gui
